
/*背景开始 第一 最小层级*/

.bg{
  width: 100vh;
  height: 100vh;
  overflow: hidden;
  /* 绝对定位不允许滚动*/
  position: fixed;
  /* background-color: black; */
}
.bg-img{
  filter: blur(20px);
  transform: scale(2);
  height: 100%;
  width: 100%;
}
.bg::before{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 1;
}
/*背景结束*/
/*二级遮罩 第三层级*/
 .twoBg{
    width: 100%;
    z-index: 4;
    position: fixed;
    overflow: hidden;
    transition: all 0.2s linear;

}
.twoBg-img{
  filter: blur(2px);
  transform: scale(1);
  height: 100%;
  width:100%;
} 
.twoBg::before{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: rgba(29, 21, 21, 0.5);
  z-index: 5;
} 

