/*二级遮罩*/
/* 导航栏css开始*/
.left-capsule{

}
/* 左上角胶囊 最大层级*/
.title{
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 50%;
  color: white;
  text-align: center;
} 
.left-capsule .left-capsule-nav{
  width: 100%;
  position: fixed;
  z-index: 6;
  top: 0px;
}
.left-capsule-nav .left-capsule-nav-content{
  width: 85px;
  text-align: center;
  border-radius: 50px;
  position: relative;
  top: 26px;
  left: 20px;
  box-shadow:0px 0px 1px 0.2px white;
  background-color: #1d19195c;
  height: 30px;
}
.left-capsule-nav-content view{
  display: inline;
  width: 35px;
  position: relative;
}
.left-capsule-nav-content .back{
  top: 4px;left: -5px;
}
.left-capsule-nav-content .line{
    top: 3px;
    width: 1px;
    border-left: solid #cac3c3 thin;
    height: 17px;
    display: inline-block;
}
.left-capsule-nav-content .home{
  top: 4px;
}

/* 第二层级*/
/* 导航栏css结束*/
.main-content{
  position: absolute;
  width: 95%;
  z-index: 2;
  margin: 0 auto;
  left: 0;
  right: 0;
}
.main-content .cover{
  width: 320px;
  height: 240px;
  margin: auto;
  border-radius: 20px;
  overflow: hidden;
}
.main-content .desc{
  position: relative;
  width: 80%;
  margin: auto;
  text-align: center;
  margin-top: 20px;
  color: white;
}
.desc-x text{
  font-size: 12px;
}
.desc-x span{
  margin-left: 10px;
}
.desc view{
  padding: 10px 0px;
}
.main-content .play{
  margin-top: 20px;
  text-align: center;
}
.play image{
  width: 30px;
  height: 30px;
  transition: all 0.5s linear;
}
.play view{
  padding: 0px 30px;
  display: inline;
}
.play view:active image{
  transform: scale(1.5);
}
.play view:hover image{
  transform: scale(1.5);
}
.main-content .btn{
  width: 150px;
  box-shadow: 0px 0px 1px 0.3px white;
  border-radius: 20px;
  overflow: hidden;
  height: 30px;
  color: white;
  text-align: center;
  margin: auto;
  margin-top: 20px;

}

.btn text{

  position: relative;
  top: 3px;
}
.pl{
  padding: 10px;
