.rk{
  padding: 10px 10px;
  position: relative;
  z-index: 1;
  /* position: relative; */
  /* margin-bottom: 60px; */

}
.rk_list{
  padding: 3px 0px ;
  transition: all 0.3s initial;
}
.rk_list:active{
  /* box-shadow: 0px 0px 10px 2px rgb(97, 95, 95); */
  color:rgb(238, 141, 141);
}
.rk_list:hover{
  /* box-shadow: 0px 0px 10px 2px rgb(97, 95, 95); */
  color:rgb(238, 141, 141);
}
.rk_list .rk_list_img{
  width: 100px;
  height: 100px;
  border-radius: 5px;
  overflow: hidden;

}
.rk_list_img image{
  width: 100%;
  height: 100%;
}
.rk_list .rk_list_content{
  position: absolute;
  margin-left: 110px;
  margin-top: -95px;
}
.rk_list_content view{
  padding: 3px 0px;
}
.rk_list_content span{
  font-size: 12px;
  font-weight: bold;
  /* font-weight: 700; */
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  display: block;
  width: 220px;
}
