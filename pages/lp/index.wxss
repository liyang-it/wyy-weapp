/* pages/pl/index.wxss */
.pl{
  /* padding: 10px; */
  color: black;
  z-index: 2;
  width: 95%;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  overflow:hidden
}
.pl .pl-title{
  font-weight: bold;
  font-size: 18px;
}

.loadText{
  position: absolute;
  width: 300px;
  z-index: 2;
  height: 300px;
  right: 0;
  left: 0;
  margin: 0 auto;
}
.loadText image{

  width: 100%;
  height: 100%;
}
/* 评论*/
.pl .pl-content{
  padding: 10px;
}
.pl-content-img{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.pl-content-img image{
  width: 100%;
  height: 100%;
}
.pl-content-title-name{
  left: 50px;
  top: -40px;
  font-size: 15px;
  color: black;
  position: relative;
}
.pl-content-title-time{
  position: relative;
  left: 50px;
  top: -40px;
  font-size: 12px;
  color: #C4C4C4;
}
.pl-content-count{
  position: relative;
  text-align: right;
  top: -75px;
  font-size: 13px;
  color: black;
}
.pl-content-count image{
  width: 18px;
  height: 18px;
  margin-left: 3px;
}
.pl-content-text{
  position: relative;
  left: 50px;
  width: 80%;
  top: -50px;
  font-size: 15px;
  font-weight: bold;
}